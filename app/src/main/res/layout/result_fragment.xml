<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainapp.fragments.scan.ResultFragment">

    <ImageView
        android:id="@+id/imv_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/margin_login_bottom"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="@dimen/margin_login_bottom"
        android:scaleType="center"
        android:src="@drawable/img"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/i1"
        style="@style/tv_title_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_result"
        android:text="@string/id"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/imv_content" />

    <TextView
        android:id="@+id/tv_id"
        style="@style/tv_content_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starsss"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/i1" />

    <TextView
        android:id="@+id/i2"
        style="@style/tv_title_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_result"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_id" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_content_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starsss"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/i2" />

    <TextView
        android:id="@+id/i3"
        style="@style/tv_title_result"
        android:layout_width="69dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/space_result"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/tv_content_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starsss"
        app:layout_constraintStart_toStartOf="@id/imv_content"
        app:layout_constraintTop_toBottomOf="@id/i3" />


</androidx.constraintlayout.widget.ConstraintLayout>